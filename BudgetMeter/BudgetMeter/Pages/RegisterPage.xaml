<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMeter.Pages.RegisterPage"
             Title="Register"
             
             
             >
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry x:Name="username" Placeholder="Display Name" WidthRequest="300" HorizontalOptions="Center" />
            <Entry x:Name="email" Placeholder="Email" WidthRequest="300" HorizontalOptions="Center" />
            <Entry x:Name="pass" Placeholder="Password" IsPassword="True" WidthRequest="300" HorizontalOptions="Center" />
            <Entry x:Name="con_pass" Placeholder="Confirm Password" IsPassword="True" WidthRequest="300" HorizontalOptions="Center" />
            <Label x:Name="error" TextColor="Red" IsVisible="false" HorizontalOptions="Center"/>
            <ActivityIndicator IsRunning="False"  x:Name="register_spinner" IsVisible="false"/>
            <Button Text="Register" Clicked="RegisterButton_Clicked" WidthRequest="100" HorizontalOptions="Center" Margin="0,10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>